@{
    var IdDeSesion = Context.Session.GetString("Id");
    var NombreDeSesion= Context.Session.GetString("NombreDeUsuario");
    var RolDeSesion = Context.Session.GetString("Rol");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tl2_tp10_2023_juanigramajo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_tp10_2023_juanigramajo.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">tl2_tp10_2023_juanigramajo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if(!string.IsNullOrEmpty(IdDeSesion) && !string.IsNullOrEmpty(NombreDeSesion) && !string.IsNullOrEmpty(RolDeSesion)) {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @* <li class="nav-item"> 
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li> *@

                                @if(RolDeSesion == "Administrador") {
                                    <li class="nav-item"> 
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Listado de usuarios</a>
                                    </li>
                                }

                                <li class="nav-item"> 
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="CrearUsuario">Crear usuario</a>
                                </li>
                                <li class="nav-item"> 
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tablero" asp-action="Index">Listado de tableros</a>
                                </li>
                                <li class="nav-item"> 
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tablero" asp-action="CrearTablero">Crear tablero</a>
                                </li>
                                
                                @* <li class="nav-item"> 
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tarea" asp-action="Index">Listado de tareas</a>
                                </li> *@

                                <li class="nav-item"> 
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tarea" asp-action="CrearTarea">Crear tarea</a>
                                </li>

                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }

                        @if(string.IsNullOrEmpty(IdDeSesion) && string.IsNullOrEmpty(NombreDeSesion) && string.IsNullOrEmpty(RolDeSesion)) {
                            <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - tl2_tp10_2023_juanigramajo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
