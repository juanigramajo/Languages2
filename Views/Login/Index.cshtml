
@model tl2_tp10_2023_juanigramajo.ViewModels.LoginViewModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Login" asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="@Model.NombreDeUsuario"></label>
        <input asp-for="@Model.NombreDeUsuario" class="form-control"/>
        <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>    
    </div>

    <div class="mb-3" class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" class="form-control" />
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-info">Iniciar Sesión</button>

    @if (TempData["MensajeError"] != null)
    {
        <div class="mt-3 alert alert-danger">
            @TempData["MensajeError"]
        </div>

        <h6>¿Aún no esta registrado?</h6>
        <a asp-controller="Usuario" asp-action="CrearUsuario" class="btn btn-outline-info">Crear usuario</a>
    } else {
        <h6>¿Aún no esta registrado?</h6>
        <a asp-controller="Usuario" asp-action="CrearUsuario" class="btn btn-outline-info">Crear usuario</a>
    }
</form>



@section Scripts { <partial name="_ValidationScriptsPartial" /> }